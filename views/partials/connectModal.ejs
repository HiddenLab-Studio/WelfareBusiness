                            <% } %>
                            <% if(register.confirm){ %>
                                <li>Password not match</li>
                            <% } %>
                        </ul>
                    </div>
                <% } %>
                <form action="/api/register" method="POST" class="form">
                    <div class="element">
                        <span>Username</span>
                        <label for="registerUsernameInput">
                            <input name="username" id="registerUsernameInput" type="text" placeholder="Enter your username"
                                   required>
                        </label>
                    </div>
                    <div class="element">
                        <span>Password</span>
                        <label class="registerPasswordInput" for="registerPasswordInput">
                            <input name="password" id="registerPasswordInput" type="password"
                                   placeholder="Enter your password" required>
                            <i class='bx bx-show show__password'></i>
                        </label>
                    </div>
                    <div class="element">
                        <span>Confirm password</span>
                        <label class="registerConfirmPasswordInput" for="registerConfirmPasswordInput">
                            <input name="passwordConfirm" id="registerConfirmPasswordInput" type="password"
                                   placeholder="Confirm your password" required>
                            <i class='bx bx-show show__password'></i>
                        </label>
                    </div>
                    <div class="connection__btn">
                        <button type="submit" id="registerBtn" class="hvr-grow">Sign up</button>
                    </div>
                </form>
                <div class="register">
                    <p>Already registered? <span id="connectSpan">Sign in<i class="bx bx-right-arrow-alt"></i></span></p>
