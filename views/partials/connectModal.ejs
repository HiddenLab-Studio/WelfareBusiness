<div id="accountModal" class="account__modal__container" style="display: none;">
    <div class="connection__container">
        <div class="close"><i id="close" class='bx bx-x'></i></div>
        <% if(register.error){ %>
            <div id="connectContainer" class="connection__content" style="display: none;">
                <div class="text">
                    <span>Hi you</span>
                    <h1>Log into your account</h1>
                </div>
                <% if(login.error){ %>
                    <div class="error">
                        <i class='bx bx-info-circle'></i>
                        <ul>
                            <% if(login.username){ %>
                                <li>Incorrect username</li>
                            <% } %>
                            <% if(login.password){ %>
                                <li>Incorrect password</li>
                            <% } %>
                        </ul>
                    </div>
                <% } %>
                <form action="/api/login" method="POST" class="form">
                    <div class="element">
                        <span>Username</span>
                        <label for="loginUsernameInput">
                            <input name="username" id="loginUsernameInput" type="text" placeholder="Enter your username"
                                   required>
                        </label>
                    </div>
                    <div class="element">
                        <span>Password</span>
                        <label class="loginPasswordInput" for="loginPasswordInput">
                            <input name="password" id="loginPasswordInput" type="password" placeholder="Enter your password"
                                   required>
                            <i class='bx bx-show show__password'></i>
                        </label>
                    </div>
                    <div class="connection__btn">
                        <button type="submit" id="loginBtn" class="hvr-grow">Sign In</button>
                    </div>
                </form>
                <div class="register">
                    <p>Not registered yet? <span id="registerSpan">Register<i class="bx bx-right-arrow-alt"></i></span></p>
                </div>
            </div>
            <div id="registerContainer" class="connection__content">
                <div class="text">
                    <span>Welcome</span>
                    <h1>Create an account</h1>
                </div>
                <% if(register.error){ %>
                    <div class="error">
                        <i class='bx bx-info-circle'></i>
